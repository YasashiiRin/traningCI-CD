name: Python CI
on:
  push: 
    branches: [main]
  pull_request:
    
jobs:
  test:
   run-ons:ubuntu-latest
   steps:
    - name: check out code
      uses: actions/checkout@v4

    - name: python run 
      uses: action/setup-python@v5
      with:
        python-version: '3.11'

    - name: install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install -r requirements.txt
    - name: runtest
      run: pytest -v
